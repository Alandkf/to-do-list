<%-include("header")-%>
     
    <div class="box" id="heading"> 
      <h1><%= DAY %></h1>
    </div>

     <div class="box">
 
     <%newItems.forEach((i)=>{%>

      <form action="/delete" method="post">
      <div class="item">
         <input type="checkbox" value="<%=i._id%>" name="checkbox" onchange="this.form.submit()">   
         <p> <%= i.name %> </p>
      </div>
        <input type="hidden" name="listName" value="<%= DAY %>"/></input>
    </form>
    <% }) %>
           
     <form action="/" method="post" class="item">
      <input type="text" name="newItem" autocomplete="off" placeholder="Add a new task..." />
      <button type="submit" name="list" value="<%-DAY%>">+</button>
    </form> 

  </div>



<%-include("footer")-%>