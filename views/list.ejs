<%-include("header")-%>
     
    <div class="box" id="heading"> 
      <h1><%= DAY %></h1>
    </div>

    <div class="box">
      <% for(let i = 0; i < newItems.length; i++) { %>
        <div class="item">
           <input type="checkbox">   
           <p> <%= newItems[i] %> </p>
      </div>
     <%  } %>
           
     <form action="/" method="post" class="item">
      <input type="text" name="newItem" autocomplete="off" placeholder="Add a new task..." />
      <button type="submit" name="list" value="<%-DAY%>">+</button>
    </form> 

  </div>


 

  <script>
    function toggleCompleted(index) {
      const listItem = document.querySelector(`#item${index}`);
      listItem.classList.toggle("completed");
    }
  </script>

<%-include("footer")-%>